# Django Configuration
SECRET_KEY=your-secret-key-here-generate-a-new-one-for-production
DEBUG=false

# Database
DATABASE_URL=postgres://username:password@hostname:port/database

# Security Settings
ALLOWED_HOSTS=your-domain.onrender.com,localhost
SECURE_SSL_REDIRECT=true
SESSION_COOKIE_SECURE=true
CSRF_COOKIE_SECURE=true

# CORS Settings (if you have a frontend)
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://another-domain.com

# PostgreSQL Settings (for docker-compose)
POSTGRES_DB=pharma_db
POSTGRES_USER=pharma_user
POSTGRES_PASSWORD=your-secure-password-here
